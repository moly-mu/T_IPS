{
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@specialistDomain/": ["specialist/domain"],
      "@specialistAplication/": ["specialist/aplication"],
      "@specialistInfraestructure/": ["specialist/infraestructure"],
      "@specialistPresentation/": ["specialist/Presentation"],
      "@specialistShared/":["specialist/shared"],
      "@prisma":["prisma/client.ts"],
      "@adminSpecialties/*": ["admin/specialties/*"],
      "@constants" : ["constants/"]
    }
  },
  "include": ["src","scripts","roles"],
  "exclude": ["node_modules"]
  
}
