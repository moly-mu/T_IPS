{
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@specialistModels/": ["specialist/models"],
      "@specialistServices/": ["specialist/services"],
      "@specialistControllers/": ["specialist/controllers"],
      "@specialistRepos/": ["specialist/repos"],
      "@specialistTypes/":["specialist/types"],
      "@prisma":["prisma/client.ts"],
      "@adminSpecialties/*": ["admin/specialties/*"],
      "@constants" : ["constants/"]
    }
  },
  "include": ["src","scripts","roles"],
  "exclude": ["node_modules"]
  
}
